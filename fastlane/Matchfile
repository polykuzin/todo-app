
# Репозиторий со всеми нужными сертификатами на гите
git_url("https://#{ENV["GIT_AUTHORIZATION"]}@github.com/polykuzin/certificates.git")

# их можно хранить не толькро на гите, поэтому
# нужно жёстко проставить тип для матча
storage_mode("git")

# Под что именно мы собираем? - мы под аппстор,
# но вообще можно и develop, например, чтобы
# узнать вес приложения и провести аналитику
type("appstore")
